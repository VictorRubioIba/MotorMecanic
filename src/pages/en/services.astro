---
// Import necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import MainSection from "@components/ui/blocks/MainSection.astro";
import LeftSection from "@components/ui/blocks/LeftSection.astro";
import RightSection from "@components/ui/blocks/RightSection.astro";
import FeaturesStats from "@components/sections/features/FeaturesStats.astro";

// Import necessary images
import blueprints from "@images/Taller_1.png";
import personWorking from "@images/Taller_3.png";
import beforeAfter from "@images/Taller_4.png";
import constructionWorkers from "@images/Taller_16.png";
import aerialView from "@images/Taller_15.png";
import usingTools from "@images/Taller_10.png";
import progressBuilding from "@images/Taller_9.png";
import underConstruction from "@images/Taller_11.png";
import { SITE } from "@data/constants";

interface Article {
  isRightSection: boolean;
  title: string;
  subTitle: string;
  btnExists?: boolean;
  btnTitle?: string;
  btnURL?: string;
  single?: boolean;
  img?: any;
  imgAlt?: string;
  imgOne?: any;
  imgOneAlt?: string;
  imgTwo?: any;
  imgTwoAlt?: string;
}

const articles: Article[] = [
  {
    isRightSection: true,
    title: "General mechanics",
    subTitle:
      "At Motor Mecanic, we are experts in offering complete solutions for all your general mechanical needs. Our team of highly trained technicians is committed to quality service, providing personalized attention and tailored solutions so your vehicle always works perfectly. Whether you need a simple oil change or a major repair, at Motor Mecanic we are here to help.",
    single: false,
    imgOne: blueprints,
    imgOneAlt: "",
    imgTwo: personWorking,
    imgTwoAlt: "",
  },
  {
    isRightSection: false,
    title: "Maintenance",
    subTitle:
      "Keeping your vehicle in perfect condition is essential for your safety and the longevity of your car. At Motor Mecanic, we offer maintenance services designed to keep your vehicle always in its best shape, regardless of its age or make.",
    img: beforeAfter,
    imgAlt: "",
    btnExists: false,
    btnTitle: "",
    btnURL: "#",
  },
  {
    isRightSection: true,
    title: "Tire Changes",
    subTitle:
      "Tires are one of the most important components for the safety and performance of your vehicle. At Motor Mecanic, we know that choosing the right tire and ensuring it is installed correctly is crucial to your peace of mind on the road. We offer complete tire repair services. tire change.",
    single: false,
    imgOne: constructionWorkers,
    imgOneAlt: "",
    imgTwo: aerialView,
    imgTwoAlt: "",
  },
  {
    isRightSection: false,
    title: "Suspensions",
    subTitle:
      "At Motor Mecanic, we understand that good suspension is key to your safety and comfort behind the wheel. That's why we offer a complete suspension service to ensure your vehicle drives smoothly and safely, regardless of road conditions.",
    img: usingTools,
    imgAlt:
      "Man in orange and black vest wearing white helmet holding yellow and black power tool",
  },
  {
    isRightSection: true,
    title: "Pre ITV y ITV",
    subTitle:
      "At Motor Mecanic, we know how important it is to pass the Technical Vehicle Inspection (ITV) without setbacks. That's why we offer a full pre-MOT service to ensure your vehicle is in perfect condition before the official inspection. With our help, you can avoid unpleasant surprises and ensure that your car meets all safety and emissions requirements. We take care of taking your vehicle to the inspection center, presenting all the necessary documentation and ensuring that the process goes smoothly.",
    single: false,
    imgOne: progressBuilding,
    imgOneAlt: "",
    imgTwo: underConstruction,
    imgTwoAlt: "",
    btnExists: false,
    btnTitle: "",
    btnURL: "#",
  },
];

const pageTitle: string = `Services | ${SITE.title}`;
---

<MainLayout
  title={pageTitle}
  structuredData={{
    "@context": "https://schema.org",
    "@type": "WebPage",
    "@id": "https://screwfast.uk/services",
    "url": "https://screwfast.uk/services",
    "name": "Expert Consultation Services | ScrewFast",
    "description": "Uniting expertise with your vision, ScrewFast provides exceptional service and comprehensive solutions in the hardware and construction industry, from consultation to project completion.",
    "isPartOf": {
        "@type": "WebSite",
        "url": "https://screwfast.uk",
        "name": "ScrewFast",
        "description": "ScrewFast offers top-tier hardware tools and expert construction services to meet all your project needs."
    },
    "inLanguage": "en-US"
  }}
>
  <!--MainSection is the introductory section of the page, it also contains a CTA button-->
  <MainSection
    title="Services"
    subTitle="These are our main services."
    btnExists={false}
    btnTitle="Schedule a Consultation"
    btnURL="#"
  />
  <!-- RightSection and LeftSection contain details about various services along with pertinent imagery.
  They alternate for variety in design.
  The 'btnExists' property is used to toggle the display of a button in these sections.
  When btnExists={true}, a button is displayed.
  This can be used to link to more detailed information or related resources.
  RightSection can also conditionally render one or two images based on the 'single' property.
  If 'single' is true, it displays one image, otherwise it displays two.
  -->
  {
    articles.map(article => {
      return article.isRightSection ? (
        <RightSection
          title={article.title}
          subTitle={article.subTitle}
          single={article.single}
          imgOne={article.imgOne}
          imgOneAlt={article.imgOneAlt}
          imgTwo={article.imgTwo}
          imgTwoAlt={article.imgTwoAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      ) : (
        <LeftSection
          title={article.title}
          subTitle={article.subTitle}
          img={article.img}
          imgAlt={article.imgAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      );
    })
  }
  <!--FeaturesStats section showcases essential stats valuable to users
  <FeaturesStats
    title="By the Numbers"
    subTitle="Our commitment to quality and reliability is evident in every project we undertake. At ScrewFast, we are dedicated to delivering industry-leading services that ensure your construction projects are built to last."
    mainStatTitle="96%"
    mainStatSubTitle="of our clients rate their experience with ScrewFast as exceptional"
    stats={[
      {
        stat: "99.8%",
        description: "project completion rate",
      },
      {
        stat: "5,000+",
        description: "successful installations",
      },
      {
        stat: "85%",
        description: "client growth year-over-year",
      },
    ]}
  />
    -->
</MainLayout>
