---
import logo from "@images/logosinfondo.png"
import cochesinfondo from "@images/cochesinfondo.png"
---


<footer class="selection:text-neutral-700 text-white py-8 relative">
  <div class="container mx-auto px-6">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <!-- Información del taller -->
      <div>
        <h4 class="text-lg font-semibold mb-4">Taller Mecánico Motor Mecanic</h4>
        <p class="text-sm">
          Travesía de Iratxe, 1, 31011<br>
          Pamplona, Navarra<br>
          Teléfono: <a href="tel:+34948252248" class="text-yellow-500 hover:underline">+34 948 252 248</a>
        </p>
        <p class="mt-2">Horario: Lunes a Jueves, 8:00 - 13:00, 15:00-19:00</p>
        <p class="mt-2">Horario: Viernes       , 7:00 - 15:00</p>
      </div>

      <!-- Enlaces rápidos -->
      <div>
        <h4 class="text-lg font-semibold mb-4">Enlaces Rápidos</h4>
        <ul class="text-sm space-y-2">
          <li><a href="/" class="hover:text-yellow-500">Inicio</a></li>
          <li><a href="/MotorMecanic/products" class="hover:text-yellow-500">Productos</a></li>
          <li><a href="/MotorMecanic/services" class="hover:text-yellow-500">Sobre Nosotros</a></li>
          <li><a href="/MotorMecanic/contact" class="hover:text-yellow-500">Contacto</a></li>
        </ul>
      </div>
                  <!-- Animación del logo de la empresa -->
                  <div class="mt-8 flex justify-center items-center h-[10vh]">
                    <div class="relative w-[60vw] h-[40vw]">
                      <!-- Coche -->
                      <img src={cochesinfondo.src} alt="Coche" class="absolute inset-0 w-full h-full object-contain z-10" />
                  
                      <!-- Rueda izquierda -->
                      <div class="absolute w-[15%] h-[15%] bottom-[34%] left-[17%] animate-spin-slow z-20">
                        <img src={logo.src} alt="Rueda" class="w-full h-full object-contain rounded-full" />
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 200 200" class="absolute inset-0 w-full h-full">
                          <circle cx="100" cy="100" r="80" fill="none" stroke="#FBBF24" stroke-width="10" />
                        </svg>
                      </div>
                  
                      <!-- Rueda derecha -->
                      <div class="absolute w-[15%] h-[15%] bottom-[34%] right-[21%] animate-spin-slow z-20">
                        <img src={logo.src} alt="Rueda" class="w-full h-full object-contain rounded-full" />
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 200 200" class="absolute inset-0 w-full h-full">
                          <circle cx="100" cy="100" r="80" fill="none" stroke="#FBBF24" stroke-width="10" />
                        </svg>
                      </div>
                    </div>
                  </div>
                  
   
  </div>
</div>

    <!-- Línea divisoria -->
    <div class="border-t border-gray-700 mt-8 pt-6 flex flex-col md:flex-row justify-between items-center">
      <p class="text-sm">&copy; 2024 Taller Mecánico Motor Mecanic. Todos los derechos reservados. Realizado por Víctor Rubio.</p>
      <div class="flex space-x-4 mt-4 md:mt-0">
        <a href="#" class="hover:text-yellow-500 transition"><i class="fab fa-facebook-f"></i></a>
        <a href="#" class="hover:text-yellow-500 transition"><i class="fab fa-twitter"></i></a>
        <a href="#" class="hover:text-yellow-500 transition"><i class="fab fa-instagram"></i></a>
      </div>
    </div>
  </div>

  <!-- Animación sutil con SVG -->
  <div class="absolute top-0 left-0 w-full h-1 bg-gradient-to-r from-yellow-500 via-yellow-400 to-yellow-500 animate-pulse"></div>
</footer>

<style>
  .fab {
    font-size: 1.25rem;
  }
  .animate-spin-slow {
    animation: spin 10s linear infinite;
  }

  @keyframes spin {
    0% {
      transform: rotate(0deg);
    }
    100% {
      transform: rotate(360deg);
    }
  }
</style>